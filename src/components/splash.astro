---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import instrumentImage from "~/assets/instrumentmashup.png";
import logo from "~/assets/logo.png";
import HeroImage from "~/components/hero-image.astro";
import Starfield from "~/components/starfield.astro";
// import GitHubCorner from "./github-corner.astro";

const logowidths = [80, 80];
const logosizes = "(min-width: 80px) 12vw, 12vw";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full bg-black">
  <Starfield />
  <!-- <GitHubCorner /> -->
  <div id="splash-bg-fallback" class="absolute inset-0 hidden opacity-40">
    <HeroImage />
  </div>
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h2
      class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end"
    >
      <!-- <Icon name="logomark" class="size-20 text-white md:size-32" /> -->
      <Image
      class="h-24 w-24"
      src={logo}
      widths={logowidths}
      sizes={logosizes}
      loading="eager"
      alt="The Creative Ranges Foundation."
    />
      <div
        class="gradient-text text-center font-extrabold tracking-tighter text-6xl md:text-8xl"
      >
      The<br />
        Creative
        <br /> Ranges
        <br /> Foundation.
      </div>
    </h2>
    <div
      id="instruments"
      class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start"
    >
      <Image
        class="h-full w-full object-cover"
        src={instrumentImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="We like to #playtolearn."
      />
    </div>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  #instruments {
    animation: float linear 2.5s infinite alternate;
  }

  @media (prefers-reduced-motion: reduce) {
    #instruments {
      @apply animate-none;
    }

    :global(#starfield) {
      @apply hidden;
    }

    #splash-bg-fallback {
      @apply block;
    }
  }
</style>
