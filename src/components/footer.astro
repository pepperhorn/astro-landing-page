---
import { Icon } from "astro-icon/components";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://creativeranges.org/",
    description: "Home",
    icon: "mdi:home",
  },
  {
    url: "https://rangesmusic.net",
    description: "Visit the Ranges Music Network",
    icon: "ourlogos/rmnsq",
  },
  {
    url: "https://mryim.au",
    description: "MRYIM",
    icon: "ourlogos/mryim",
  },
  {
    url: "https://facebook.com/creativeranges/",
    description: "Creative Ranges on Facebook",
    icon: "fa-brands:facebook",
  },
  {
    url: "https://instagram.com/creativeranges/",
    description: "Creative Ranges on Instagram",
    icon: "fa-brands:instagram",
  },
  {
    url: "https://tiktok.com/creativeranges/",
    description: "Creative Ranges on TikTok",
    icon: "fa-brands:tiktok",
  },
];
---

<footer class="relative flex h-64 items-center justify-center">
  <div class="absolute inset-0 overflow-hidden opacity-40">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-6">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
